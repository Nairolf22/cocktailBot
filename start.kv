#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
<StatLabel@Label>
    text_size: root.width, None
    size: self.texture_size
    font_size: 45

<StartScreen>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "cdata/bg.png"

    Widget:
        Label:
            text: "Dr. Fleuchs Bar"

    Widget:
        Button:
            pos: 3*root.width/4, root.height/4
            size: root.width/4, root.height/4
            text: "ohne Karte"
            color: 0.8,0.8,0.8,1
            background_color: 0.5,0,0,0.8
            font_size: 40
            on_release:
                root.manager.current = 'main'

    Widget:
        GridLayout:
            cols: 2
            pos: 3*root.width/4, 4*root.height/5
            size: root.width/4, root.height/5

            StatLabel:
                text: "insgesamt:"

            StatLabel:
                text: "0 l"

            StatLabel:
                text: "Alkohol:"

            StatLabel:
                text: "0 ml"

            StatLabel:
                text: "# Getr√§nke:"

            StatLabel:
                text: "3"

    Graph:
        id: graph_test
        plot: MeshLinePlot
        xlabel:'X'
        ylabel:'Y'
        x_ticks_minor:5
        x_tics_major:25
        y_ticks_major:1
        y_grid_label:True
        x_grid_label:True
        padding:5
        x_grid:True
        y_grid:True
        xmin:-0
        xmax:100
        ymin:-1
        ymax:1
        pos: 0, root.height / 6
        size: root.width * 2 / 3 , root.height * 18 / 24